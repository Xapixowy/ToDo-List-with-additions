@model ToDo_List_with_additions.Models.ToDoModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ToDo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Edit">
            <div class="form-group" style="display:none">
                <input type="text" class="form-control" name="id" value="@Model.Id" />
            </div>
            <div class="form-group" style="display:none">
                <input type="text" class="form-control" name="userId" value="@Model.UserId" />
            </div>
            <div class="form-group">
                <label for="date">Date</label>
				@Html.EditorFor(Model => Model.Date, new { htmlAttributes = new { @class = "form-control", @id="date", @name="date" } })
            </div>
			<div class="form-group">
				<label for="content">Content</label>
                <input type="text" class="form-control" id="content" name="content" value="@Model.Content" />
			</div>
			<div class="form-group">
                <label for="importance">Importance</label>
                <select class="form-select" id="importance" name="importance">
                    <option value="0">Low</option>
                    <option value="1">Medium</option>
                    <option value="2">High</option>
                    <option value="3">Critical</option>
                </select>
            </div>
            <div class="form-check form-switch">
                <label class="form-check-label" for="done">Done</label>
				@Html.EditorFor(Model => Model.Done, new { htmlAttributes = new { @class = "form-check-input", @id = "done", @name = "done" } })
            </div>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
	const select = document.getElementById("importance");
	select.value = "@Model.Importance";
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
