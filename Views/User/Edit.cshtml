@model ToDo_List_with_additions.Models.UserModel

@{
    ViewData["Title"] = "Edit profile";
}

@section Buttons {
    <li>
        <a asp-controller="User" asp-action="Logout">Logout</a>
    </li>
}

@section Links {
    <li>
        <a asp-controller="ToDo" asp-action="Index">ToDo List</a>
    </li>
    <li>
        <a asp-controller="Statistics" asp-action="Index">Statistics</a>
    </li>
}

<div class="edit-profile">
    <div class="wrapper">
        <h1>Edit profile</h1>
        <form method="post" asp-controller="User" asp-action="Edit">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="form-group">
                <label for="firstName">First Name</label>
                @Html.EditorFor(Model => Model.FirstName, new { htmlAttributes = new { @id="firstName", @name="firstName", @required="required" } })
                @Html.ValidationMessageFor(Model => Model.FirstName)
            </div>

            <div class="form-group">
                <label for="lastName">Last Name</label>
                @Html.EditorFor(Model => Model.LastName, new { htmlAttributes = new { @id="lastName", @name="lastName", @required="required" } })
                @Html.ValidationMessageFor(Model => Model.LastName)
            </div>

            <div class="form-group">
                <label for="nickname">Nickname</label>
                @Html.EditorFor(Model => Model.Nickname, new { htmlAttributes = new { @id="nickname", @name="nickname" } })
                @Html.ValidationMessageFor(Model => Model.Nickname)
            </div>

            <div class="form-group buttons">
                <button>Edit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
